<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="report name" pageWidth="612" pageHeight="792" columnWidth="572" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
	<queryString>
		<![CDATA[SELECT tmpFIC.idOperacion,
       tmpFIC.nombreOperacion,
       tmpFIC.idEscala,
       tmpFIC.nombreEscala,
       tmpFIC.nombreItem,
       tmpFIC.vrEscala,
       tmpFIC.textoEscala,
       tmpFIC.idTipoEscala
FROM
( SELECT tblPlusFicha.idOperacion,
       tblPlusFicha.idEscala,
       tblPlusFicha.item,
       tblPlusFicha.vrEscala,
       tblPlusFicha.textoEscala,
       tblJobEscala.nombreEscala,
       tblJobEscala.idTipoEscala,
       tblJobOperacion.nombreOperacion,
       ' ' AS nombreItem,
       tblJobEscalaOperacion.idOrdenSalida
FROM   tblPlusFicha
INNER JOIN tblJobEscala
ON tblPlusFicha.idEscala              =
                   tblJobEscala.idEscala
INNER JOIN tblJobEscalaOperacion
ON tblJobEscalaOperacion.idEscala     =
                   tblPlusFicha.idEscala
AND tblJobEscalaOperacion.idOperacion =
                tblPlusFicha.idOperacion
INNER JOIN tblJobOperacion
ON tblJobEscalaOperacion.idOperacion  =
             tblJobOperacion.idOperacion
WHERE  tblPlusFicha.idFicha       = 1778
AND  tblJobEscala.idTipoEscala   NOT IN (2,9)
AND    tblPlusFicha.idOperacion  !=  1
UNION
SELECT tblPlusFicha.idOperacion,
       tblPlusFicha.idEscala,
       tblPlusFicha.item,
       tblPlusFicha.vrEscala,
       tblPlusFicha.textoEscala,
       tblJobEscala.nombreEscala,
       tblJobEscala.idTipoEscala,
       tblJobOperacion.nombreOperacion,
       tblJobEscalaDetalle.nombreItem,
       tblJobEscalaOperacion.idOrdenSalida
FROM   tblPlusFicha
INNER JOIN tblJobEscala
ON tblPlusFicha.idEscala              =
                   tblJobEscala.idEscala
INNER JOIN tblJobEscalaOperacion
ON tblJobEscalaOperacion.idEscala     =
                   tblPlusFicha.idEscala
AND tblJobEscalaOperacion.idOperacion =
                tblPlusFicha.idOperacion
INNER JOIN tblJobOperacion
ON tblJobEscalaOperacion.idOperacion  =
             tblJobOperacion.idOperacion
INNER JOIN tblJobEscalaDetalle
ON tblJobEscala.idEscala              =
            tblJobEscalaDetalle.idEscala
AND tblPlusFicha.vrEscala             =
                tblJobEscalaDetalle.item
WHERE      tblPlusFicha.idFicha = 1778
AND  tblJobEscala.idTipoEscala  IN (2)
AND  tblPlusFicha.idOperacion   != 1 )
                               AS tmpFIC
ORDER BY tmpFIC.idOperacion,
         tmpFIC.idOrdenSalida,
         tmpFIC.idEscala]]>
	</queryString>
